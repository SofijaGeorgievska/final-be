<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        .form {
            display: flex;
            flex-direction: column;
            width: 300px;
            gap: 10px
        }

        .input {
            padding: 10px;
            border: 1px solid black;
            border-radius: 6px;
        }

        .button {
            cursor: pointer;
            background-color: greenyellow;
            padding: 10px;
            border: none;
            border-radius: 6px;
        }

        .button:hover {
            background-color: rgb(128, 189, 35);
        }
    </style>
</head>
<body>
    <%- include("partials/header") %>
    <div class="faculty-container">
        <% data.forEach((faculty, i) => { %>
            <div class="faculty">
                <h1> <%= faculty.name %> </h1>
                <p> <%= faculty.address %> </p>
                <a class="delete-btn" href="/brishi?i=<%= i %>" >Бриши</a>
            </div>
        <% }) %>
    </div>
    </form>
</body>
</html>